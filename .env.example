# Database Configuration
# PostgreSQL user for the database container
POSTGRES_USER=postgres

# PostgreSQL password for the database container
POSTGRES_PASSWORD=password

# PostgreSQL database name
POSTGRES_DB=public

# Database host (use 'postgres' for docker-compose, 'localhost' for local development)
DB_HOST=postgres

# Database port
DB_PORT=5432

# Database name (usually same as POSTGRES_DB)
DB_NAME=public

# Database user (usually same as POSTGRES_USER)
DB_USER=postgres

# Database password (usually same as POSTGRES_PASSWORD)
DB_PASSWORD=password

# Optional: Database schema name
# DB_SCHEMA=

# Flask Configuration
# Secret key for Flask sessions (CHANGE THIS IN PRODUCTION!)
FLASK_SECRET_KEY=change-me-in-production

# Enable Flask debug mode (true/false)
FLASK_DEBUG=true

# Flask server port
FLASK_RUN_PORT=5050

# Flask server host (0.0.0.0 to accept connections from all interfaces)
FLASK_RUN_HOST=0.0.0.0

# Automatically populate database on startup (true/false)
POPULATE_DB=true

# Next.js Configuration
# API URL for the frontend to connect to the backend
NEXT_PUBLIC_API_URL=http://localhost:5050

# Node environment (development/production)
NODE_ENV=development

# CORS Configuration
# Comma-separated list of allowed origins for CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000,http://127.0.0.1:3001,http://nextjs_app:3000

# Port Configuration
# PostgreSQL exposed port
POSTGRES_PORT=5432

# Flask exposed port
FLASK_PORT=5050

# Next.js exposed port
NEXTJS_PORT=3000
